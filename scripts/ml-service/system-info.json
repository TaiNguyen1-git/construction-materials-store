{
    "name": "Dự Báo Tồn Kho - Construction Materials Store",
    "version": "1.0.0",
    "description": "Hệ thống dự báo và cảnh báo tồn kho sử dụng Prophet ML + Statistical Ensemble",
    "algorithms": {
        "prophet_ml": {
            "name": "Facebook Prophet",
            "type": "Machine Learning",
            "accuracy": "85-95%",
            "requirements": {
                "python": "3.8+",
                "minimum_data_days": 14,
                "ideal_data_days": 60
            },
            "features": [
                "Auto-learned seasonality",
                "Holiday detection (Vietnam)",
                "Trend detection",
                "Confidence intervals"
            ],
            "status": "available"
        },
        "statistical_ensemble": {
            "name": "Statistical Ensemble",
            "type": "Statistical Methods",
            "accuracy": "70-85%",
            "requirements": {
                "minimum_data_points": 3
            },
            "algorithms": [
                {
                    "name": "Simple Moving Average (SMA)",
                    "weight": "15-25%",
                    "description": "Trung bình động đơn giản"
                },
                {
                    "name": "Exponential Moving Average (EMA)",
                    "weight": "20%",
                    "description": "Trung bình động lũy thừa"
                },
                {
                    "name": "Linear Regression",
                    "weight": "15-25%",
                    "description": "Hồi quy tuyến tính"
                },
                {
                    "name": "Holt's Double Exponential",
                    "weight": "20%",
                    "description": "Xử lý Level + Trend"
                },
                {
                    "name": "Holt-Winters (Triple Exponential)",
                    "weight": "25%",
                    "description": "Level + Trend + Seasonality"
                },
                {
                    "name": "Weighted Recent Average",
                    "weight": "15%",
                    "description": "Ưu tiên dữ liệu gần đây"
                }
            ],
            "status": "active"
        }
    },
    "warning_system": {
        "types": [
            {
                "type": "LOW_STOCK",
                "description": "Sản phẩm sắp hết hàng",
                "trigger": "availableQuantity <= minStockLevel",
                "priority_levels": [
                    "HIGH",
                    "MEDIUM",
                    "LOW"
                ]
            },
            {
                "type": "REORDER_NEEDED",
                "description": "Đề xuất đặt hàng dựa trên dự báo",
                "trigger": "recommendedOrder > 0 AND currentStock < predictedDemand * 1.2",
                "priority_levels": [
                    "MEDIUM"
                ]
            },
            {
                "type": "PREDICTION_ALERT",
                "description": "Độ chính xác AI thấp",
                "trigger": "accuracy < 70%",
                "priority_levels": [
                    "HIGH"
                ]
            },
            {
                "type": "MONTHLY_REMINDER",
                "description": "Nhắc nhở chạy predictions đầu tháng",
                "trigger": "dayOfMonth <= 2 AND noPredictionsThisMonth",
                "priority_levels": [
                    "MEDIUM"
                ]
            }
        ],
        "channels": [
            "Database (MongoDB)",
            "Firebase Realtime Database",
            "Email Service"
        ]
    },
    "api_endpoints": {
        "predictions": [
            "GET /api/predictions/inventory",
            "POST /api/predictions/inventory"
        ],
        "ml_training": [
            "GET /api/ml/train",
            "POST /api/ml/train"
        ],
        "notifications": [
            "GET /api/notifications",
            "PUT /api/notifications/:id"
        ]
    },
    "files": {
        "core": [
            "src/lib/stats-forecasting.ts",
            "src/lib/ml-prediction.ts",
            "src/lib/notification-service.ts"
        ],
        "api": [
            "src/app/api/predictions/inventory/route.ts",
            "src/app/api/ml/train/route.ts"
        ],
        "ui": [
            "src/app/admin/ml-training/page.tsx",
            "src/components/admin/InventoryAnalytics.tsx",
            "src/components/admin/InventoryManagement.tsx"
        ],
        "python_ml": [
            "scripts/ml-service/train_prophet.py",
            "scripts/ml-service/predict_server.py",
            "scripts/ml-service/requirements.txt"
        ]
    }
}